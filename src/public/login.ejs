    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Robinson's Karate School</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon"
        type="image/png"
        href="img/favicon.ico">
        <meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- CSS -->
		<link rel="stylesheet" href="libs/bootstrap/dist/css/bootstrap.min.css">
		<!-- custom styles -->
		<style>
			body {
				padding-top: 50px;
				padding-bottom: 20px;
			}
		</style>
		<link rel="stylesheet" href="css/simple-sidebar.css">
		<link rel="stylesheet" href="css/main.css">
        <style>
            body {
                padding-top: 50px;
                padding-bottom: 20px;
                background-color: black;
            }
            .login {
                margin-top: 50px;
                background: white;
                padding: 30px 20px 20px 20px;
                border-radius: 10px;
            }

            .loginItem {
                margin-bottom: 15px;
            }
            .remember {
                text-align: center;
            }

            .heading {
                font-family: "Trebuchet MS", Helvetica, sans-serif;
                color: #666666;
                font-variant: small-caps;
                text-shadow: 1px 1px #B3B3B3;
            }
            .checkbox {
                text-align: center;
            }
        </style>

    </head>
    <body>
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12 col-sm-12 col-lg-12">
                    <img class="logo" src="img/RKS_Logo.png" alt="Logo">
                </div>
            </div>
          <div class="row">
                <div class="col-xs-3 col-sm-3 col-md-3 col-sm-3 col-lg-3"></div>
                <div class="login col-xs-6 col-sm-6 col-md-6 col-sm-6 col-lg-6">
                  <form class="form-signin" action="/loginA" method="post">
                    <!-- <h2 class="form-signin-heading text-center heading">Log-in</h2> -->
                    <div class="input-group loginItem">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
                        <label for="inputEmail" class="sr-only">Email address</label>
    					  <!-- removed type="email" for now -->
                        <input name="username" id="inputEmail" class="form-control " placeholder="Email address" describedby="basic-addon1" required autofocus>
                    </div>
                    <div class="input-group loginItem">
                        <span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-lock"></span></span>
                        <label for="inputPassword" class="sr-only ">Password</label>
                        <input name="password" type="password" id="inputPassword" class="form-control loginItem" placeholder="Password" describedby="basic-addon2" required>
                    </div>
                    <div class="checkbox">
    					<% if(message == "Invalid user name or password!"){
                            alert = "alert alert-danger";
                         %>
    						<p id="error" class="<%= alert %>"><%= message %></p>
    					<% } %>
                          <label >
                            <input type="checkbox"  value="remember-me"> Remember me
                          </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
                  </form>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-sm-3 col-lg-3"></div>
            </div>
        </div>
   <!-- /container -->
    </body>
